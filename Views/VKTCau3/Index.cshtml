@model IEnumerable<BaiThiVKT.Models.VKTCau3>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Tạo Một Sinh Viên</a>
</p>
<table class="table">
    <thead>
        <tr>
             <th>
               Mã Sinh Viên
            </th>
            <th>
               Tên Sinh Viên
            </th>
            <th>
               Giới Tính
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentID">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.StudentID">Chi Tiết </a> |
                <a asp-action="Delete" asp-route-id="@item.StudentID">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
